---
import Layout from '../layouts/Layout.astro';
---

<Layout title="404 - Page Not Found">
  <main class="flex flex-col items-center justify-center min-h-screen p-4 text-center">
    <h1 class="text-4xl font-bold text-primary mb-4">404</h1>
    <p class="text-xl mb-8">ページが見つかりませんでした</p>
    <a href="/" class="px-6 py-3 bg-primary text-white rounded-md hover:bg-opacity-90 transition">
      ホームに戻る
    </a>
  </main>
</Layout>